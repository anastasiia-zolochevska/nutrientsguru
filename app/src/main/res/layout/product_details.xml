<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/productTitle"
        android:layout_width="wrap_content"
        android:textColor="#ff050505"
        android:padding="5dp"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffc8c8c8">

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/measurementSpinner"
            android:layout_margin="2dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@+id/changeServingsEditText" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:id="@+id/changeServingsEditText"
            android:text="100"
            android:inputType="number"
            android:ems="10"
            android:layout_centerVertical="true"
            android:textSize="15dip"
            android:drawableTop="#ff282929"
            android:drawableBottom="#ff282929"
            android:layout_margin="2dp"
            android:background="@drawable/rounded_edit_text"
            android:layout_toLeftOf="@+id/recalculateButton" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:scaleType="fitEnd"
            android:background="#ffc8c8c8"
            android:id="@+id/recalculateButton"
            android:src="@drawable/calc"
             />

    </RelativeLayout>

    <TextView
        android:id="@+id/carbohydrateFactor"
        android:text="Carbohydrate Factor:"
        android:layout_width="wrap_content"
        android:textColor="#ff6b6b6b"
        android:paddingLeft="5dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/fatFactor"
        android:text="Fat Factor:"
        android:textColor="#ff6b6b6b"
        android:paddingLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/proteinFactor"
        android:text="Protein Factor:"
        android:textColor="#ff6b6b6b"
        android:paddingLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/nitrogenFactor"
        android:textColor="#ff6b6b6b"
        android:paddingLeft="5dp"
        android:text="Nitrogen to Protein Conversion Factor:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <ExpandableListView
        android:id="@+id/nutrientListTable"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:cacheColorHint="#00000000" />

</LinearLayout>
