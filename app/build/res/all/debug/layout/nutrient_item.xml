<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dip"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/nutrientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dip"
        android:padding="5dp"
        android:textColor="#ff282929" />

    <TextView
        android:id="@+id/nutrientUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dip"
        android:layout_toRightOf="@id/nutrientName"
        android:text="mg"
        android:padding="5dp"
        android:textColor="#ff5d5d5d" />

    <TextView
        android:id="@+id/nutrientValue1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="0.02"
        android:textSize="15dip"
        android:padding="5dp"
        android:textColor="#ff050505" />

    <TextView
        android:id="@+id/nutrientValue2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/nutrientValue1"
        android:textSize="15dip"
        android:padding="5dp"
        android:textColor="#ff660009"  />

    <TextView
        android:id="@+id/nutrientValue3"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/nutrientValue2"
        android:textSize="15dip"
        android:padding="5dp"
        android:textColor="#ff260b7d" />


</RelativeLayout><!-- From: file:/Users/Anastasiia/Projects/Akvelon/Study/Android/NutrientsGuru/app/src/main/res/layout/nutrient_item.xml -->